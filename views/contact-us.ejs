<!-- main contact form -->
<form action="/contact" method="post">
    <!-- name info -->
    <div class="name-info flex">
        <!-- first-name -->
        <div class="flex">
            <input data-aos="fade-left" type="text" name="first-name" id="first-name" required>
            <span >First Name*</span>
        </div>
        <!-- last-name -->
        <div class="flex">
            <input data-aos="fade-left" type="text" name="last-name" id="last-name" required>
            <span >Last Name*</span>
        </div>
    </div>
    <!-- others info -->
    <div class="others-info flex">
        <!-- email -->
        <div class="flex">
            <input data-aos="fade-left" type="email" name="email" id="email" required>
            <span>Email*</span>
        </div>
        <!-- phone -->
        <div class="flex">
            <input data-aos="fade-left" type="tel" name="phone" id="phone" required>
            <span>Phone*</span>
        </div>
    </div>

    <!-- msg area -->
    <div class="msg-area flex">
        <div class="flex">
            <span data-aos="fade-left">Type your message here*</span>
            <textarea data-aos="fade-left" name="messege" id="message" cols="30" rows="5" required></textarea>
            <button data-aos="zoom-in" data-aos-duration="1000" class="btn" type="submit">Submit</button>
        </div>
    </div>
</form>
    </div>
</div>

